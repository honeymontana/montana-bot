# Bot Configuration
BOT_TOKEN=your_bot_token_here
NODE_ENV=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=montana_bot
DB_USER=montana
DB_PASSWORD=montana_secure_password

# Telegram Groups (use numeric IDs with - prefix for groups)
MAIN_GROUP_ID=-1001234567890
# Additional groups will be managed dynamically in the database

# Bot Settings
CHECK_INTERVAL_MINUTES=5
LOG_LEVEL=info
TEST_MODE=true

# Telegram MTProto API (for full member sync)
# Get from https://my.telegram.org/apps
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890
TELEGRAM_SESSION_STRING=

# Admin Users (comma-separated Telegram user IDs)
ADMIN_IDS=123456789,987654321

# Discord Integration (optional)
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_GUILD_ID=your_discord_server_id_here
DISCORD_MEMBER_ROLE_ID=your_discord_role_id_here
DISCORD_REDIRECT_URI=http://your-server.com:3001/auth/discord/callback

# OAuth Server Port
OAUTH_PORT=3001