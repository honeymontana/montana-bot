{
  "name": "montana-helper-bot",
  "version": "1.0.0",
  "description": "Telegram bot for managing access to Montana group chats",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dashboard": "tsx watch src/dashboard.ts",
    "dashboard:start": "node dist/dashboard.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,json,md}'",
    "quality": "npm run format && npm run lint:fix && npm run build && npm test",
    "migration:run": "tsx src/database/migrate.ts",
    "migration:create": "tsx src/database/create-migration.ts",
    "pm2:dev": "pm2 start ecosystem.config.js --only montana-bot-dev",
    "pm2:staging": "pm2 start ecosystem.config.js --only montana-bot-staging",
    "pm2:prod": "pm2 start ecosystem.config.js --only montana-bot-prod",
    "pm2:stop:dev": "pm2 stop montana-bot-dev",
    "pm2:stop:staging": "pm2 stop montana-bot-staging",
    "pm2:stop:prod": "pm2 stop montana-bot-prod",
    "pm2:restart:dev": "pm2 restart montana-bot-dev",
    "pm2:restart:staging": "pm2 restart montana-bot-staging",
    "pm2:restart:prod": "pm2 restart montana-bot-prod",
    "pm2:logs:dev": "pm2 logs montana-bot-dev",
    "pm2:logs:staging": "pm2 logs montana-bot-staging",
    "pm2:logs:prod": "pm2 logs montana-bot-prod",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "deploy:dev": "npm run build && npm run pm2:restart:dev",
    "deploy:staging": "npm run build && npm run pm2:restart:staging",
    "deploy:prod": "npm run build && npm run pm2:restart:prod"
  },
  "keywords": [
    "telegram",
    "bot",
    "montana",
    "subscription"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.4",
    "cors": "^2.8.6",
    "discord.js": "^14.25.1",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "input": "^1.0.1",
    "joi": "^17.11.0",
    "node-telegram-bot-api": "0.63.0",
    "pg": "^8.18.0",
    "telegram": "^2.26.22",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.1",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "pm2": "^6.0.14",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
